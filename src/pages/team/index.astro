---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image, getImage } from 'astro:assets';
import defaultAvatar from '../../assets/members/default.png';
import heroBgRaw from '../../assets/backgrounds/hero-background.jpg';

const heroBg = await getImage({ src: heroBgRaw, width: 3000, height: 600, format: 'webp', quality: 85, fit: 'cover' });

const avatarGlob = import.meta.glob<{ default: ImageMetadata }>(
  '/src/content/team/*/*/avatar.*',
  { eager: true }
);

const allMembers = await getCollection('team', ({ data }) => !data.draft);

const mentors = allMembers
  .filter(m => m.data.role === 'mentor')
  .sort((a, b) => (a.data.weight ?? 99) - (b.data.weight ?? 99));

const organizers = allMembers
  .filter(m => m.data.role === 'organizer')
  .sort((a, b) => (a.data.weight ?? 99) - (b.data.weight ?? 99));

const founders = allMembers
  .filter(m => m.data.role === 'founder')
  .sort((a, b) => (a.data.weight ?? 99) - (b.data.weight ?? 99));

// member.id = "mentors/alvin-lau/index.md" → match glob path ending in /team/mentors/alvin-lau/avatar.*
function getAvatar(member: (typeof allMembers)[number]) {
  const dir = member.id.replace(/\/index\.md$/, '');
  const entry = Object.entries(avatarGlob).find(([path]) =>
    path.includes(`/team/${dir}/`)
  );
  return entry ? entry[1].default : defaultAvatar;
}

// Parse social links from [{platform: url}, ...] array
function getSocialLinks(social: Record<string, string>[]) {
  const icons: Record<string, string> = {
    email: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    linkedin: 'M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z M4 6a2 2 0 100-4 2 2 0 000 4z',
    github: 'M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22',
    facebook: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z',
    link: 'M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71',
    threads: 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z',
  };
  return social.map(obj => {
    const [platform, href] = Object.entries(obj)[0];
    return { platform, href, icon: icons[platform] ?? icons.link };
  });
}

const groups = [
  { title: 'Mentors',          badge: 'blue',   members: mentors    },
  { title: 'Organizers',       badge: 'green',  members: organizers },
  { title: 'Founders & Alumni',badge: 'purple', members: founders   },
];
---

<BaseLayout title="Team" description="Meet the mentors, organizers, and founders behind NTUAIS.">

  <section class="page-hero">
    <div class="page-hero-bg" style={`background-image: url('${heroBg.src}')`} aria-hidden="true"></div>
    <div class="container">
      <span class="section-badge">Our Team</span>
      <h1>The People Behind NTUAIS</h1>
      <p>Researchers, students, and practitioners united by a commitment to making AI safe.</p>
    </div>
  </section>

  {groups.map(({ title, badge, members }) => members.length > 0 && (
    <section class="team-section">
      <div class="container">
        <h2 class="team-group-title">
          <span class={`section-badge section-badge--${badge}`}>{title}</span>
        </h2>
        <div class="team-grid">
          {members.map(member => {
            const links = getSocialLinks(member.data.social ?? []);
            const hasDetails = member.data.summary || links.length > 0;
            return (
              <details class="member-card card-linear">
                <summary class="member-summary-row">
                  <Image
                    src={getAvatar(member)}
                    alt={member.data.title}
                    width={256}
                    height={256}
                    class="member-avatar"
                  />
                  <div class="member-header-info">
                    <span class="member-name">{member.data.title}</span>
                    {member.data.description && (
                      <span class="member-role">{member.data.description}</span>
                    )}
                  </div>
                  {hasDetails && (
                    <span class="member-chevron" aria-hidden="true">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" width="16" height="16">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                      </svg>
                    </span>
                  )}
                </summary>
                {hasDetails && (
                  <div class="member-body">
                    {member.data.summary && <p class="member-bio">{member.data.summary}</p>}
                    {links.length > 0 && (
                      <div class="member-social">
                        {links.map(link => (
                          <a href={link.href} class="social-link" aria-label={link.platform} target="_blank" rel="noopener noreferrer">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.75" width="16" height="16">
                              <path stroke-linecap="round" stroke-linejoin="round" d={link.icon} />
                            </svg>
                            {link.platform}
                          </a>
                        ))}
                      </div>
                    )}
                  </div>
                )}
              </details>
            );
          })}
        </div>
      </div>
    </section>
  ))}

</BaseLayout>

<style>
  .page-hero {
    padding: 4rem 0 2.5rem;
    border-bottom: 1px solid var(--linear-border-subtle);
  }

  .page-hero h1 {
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    color: #F7FAF9;
    margin: 0.75rem 0 0.5rem;
  }

  .page-hero p {
    color: rgba(247, 250, 249, 0.8);
    font-size: 1.05rem;
    max-width: 560px;
  }

  .page-hero .section-badge {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.25);
    color: rgba(247, 250, 249, 0.9);
  }

  .team-section {
    padding: 3.5rem 0;
    border-bottom: 1px solid var(--linear-border-subtle);
  }

  .team-section:last-of-type {
    border-bottom: none;
  }

  .team-group-title {
    margin-bottom: 1.75rem;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1rem;
  }

  /* Toggle card */
  .member-card {
    padding: 0;
    overflow: visible;
    position: relative;
    z-index: 0;
  }

  /* When open: squared bottom corners so card merges into dropdown, no redundant shadow */
  .member-card[open] {
    z-index: 10;
    border-color: var(--linear-border-strong);
    border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
    box-shadow: none;
  }

  .member-card[open]:hover {
    box-shadow: none;
  }

  .member-card[open] .member-chevron {
    transform: rotate(180deg);
    color: var(--linear-accent-green);
  }

  .member-summary-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    cursor: pointer;
    list-style: none;
    user-select: none;
    border-radius: inherit;
    transition: background var(--transition-fast);
  }

  .member-summary-row:hover {
    background: var(--linear-overlay-soft);
  }

  .member-card[open] .member-summary-row {
    background: var(--linear-overlay-soft);
  }

  /* Remove default disclosure triangle in all browsers */
  .member-summary-row::-webkit-details-marker { display: none; }
  .member-summary-row::marker { display: none; }

  .member-avatar {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--linear-border-subtle);
    flex-shrink: 0;
  }

  .member-header-info {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    flex: 1;
    min-width: 0;
  }

  .member-name {
    font-size: 0.975rem;
    font-weight: 600;
    color: var(--linear-text-bright);
  }

  .member-role {
    font-size: 0.78rem;
    color: var(--linear-accent-green);
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .member-chevron {
    color: var(--linear-muted);
    flex-shrink: 0;
    transition: transform var(--transition-fast), color var(--transition-fast);
  }

  .member-summary-row:hover .member-chevron {
    color: var(--linear-subtext);
  }

  /* Expanded content — floats over grid, connects flush to card bottom */
  .member-body {
    position: absolute;
    top: 100%;
    left: -1px;
    right: -1px;
    z-index: 10;
    background: var(--linear-bg-card);
    border: 1px solid var(--linear-border-strong);
    border-top: none;
    border-radius: 0 0 var(--border-radius-lg) var(--border-radius-lg);
    box-shadow: 0 8px 32px var(--linear-shadow-heavy);
    padding: 1rem 1.25rem 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .member-bio {
    font-size: 0.85rem;
    color: var(--linear-subtext);
    line-height: 1.6;
  }

  .member-social {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.6rem;
    border-radius: var(--border-radius-sm);
    background: var(--linear-overlay-soft);
    border: 1px solid var(--linear-border-subtle);
    color: var(--linear-muted);
    text-decoration: none;
    transition: color var(--transition-fast), background var(--transition-fast);
  }

  .social-link:hover {
    color: var(--linear-text);
    background: var(--linear-overlay-medium);
  }

  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
