---
// Footer component - Simple footer with links and contact info
const currentYear = new Date().getFullYear();
---

<footer class="bg-charcoal py-16 text-cream">
  <div class="container mx-auto px-6">
    <div class="grid gap-12 md:grid-cols-3 lg:gap-16">
      <!-- Brand Column -->
      <div>
        <h3 class="mb-4 font-serif text-2xl font-bold">Collective Architecture</h3>
        <p class="text-sm leading-relaxed text-cream/70">
          Creating spaces that inspire and endure through thoughtful design and craftsmanship.
        </p>
      </div>

      <!-- Navigation Links -->
      <div>
        <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-accent">Navigate</h4>
        <ul class="space-y-2">
          <li>
            <a href="#about" class="text-sm text-cream/80 transition-colors hover:text-accent">
              About
            </a>
          </li>
          <li>
            <a href="#services" class="text-sm text-cream/80 transition-colors hover:text-accent">
              Services
            </a>
          </li>
          <li>
            <a href="#projects" class="text-sm text-cream/80 transition-colors hover:text-accent">
              Projects
            </a>
          </li>
          <li>
            <a href="#contact" class="text-sm text-cream/80 transition-colors hover:text-accent">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-accent">Contact</h4>
        <ul class="space-y-2 text-sm text-cream/80">
          <li>
            <a href="mailto:info@collectivearch.com" class="transition-colors hover:text-accent">
              info@collectivearch.com
            </a>
          </li>
          <li>
            <a href="tel:+15551234567" class="transition-colors hover:text-accent">
              +1 (555) 123-4567
            </a>
          </li>
          <li class="pt-2">
            123 Design Street<br />
            Creative District<br />
            New York, NY 10001
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 border-t border-cream/20 pt-8">
      <div class="flex flex-col items-center justify-between gap-4 text-sm text-cream/60 md:flex-row">
        <p>&copy; {currentYear} Collective Architecture. All rights reserved.</p>
        <div class="flex gap-6">
          <a href="#" class="transition-colors hover:text-accent">Privacy Policy</a>
          <a href="#" class="transition-colors hover:text-accent">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
